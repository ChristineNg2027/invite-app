{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "@/*": ["src/*"]
    },

    "types": ["react", "react-dom", "vite/client"]
  },
  "include": ["src", "vite.config.ts", "index.html"]
}
